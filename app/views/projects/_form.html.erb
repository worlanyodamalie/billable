<%= form_for(@project, html: {class: 'form-horizontal'}) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :client, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :client_id, Client.where(:user => User.find_by(:id => session[:user_id])), :id, :name, {:prompt => true}, {class: 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :color, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.color_field :color, class: 'form-control', data: { :'show-input' => 'true' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
