<h1>Dashboard</h1>

<div class="row">
	<div class="col-sm-9" id="week_display">
		<%= render partial: "week", locals: {:week_days => @week_days, :week_data => @week_data, :navigation => @initial_navigation_data} %>
	</div>

	<div class="col-sm-3">
		<h3>Projects</h3>
		<ul>
		<% if !@clients.blank? %>
		  <% for item in @clients %>
		    <li><strong><%= item.name %></strong>
		    <% if !item.projects.blank? %>
		    	<ul>
		      <% for proj in item.projects %>
					<li><%= proj.name %><br><span class="text-muted">(<%= distance_of_time_in_words(proj.spent_seconds) %>)</span></li>
		      <% end %>
		      	</ul>
		    <% end %>
		    </li>
		  <% end %>
		<% else %>
		  <li><span class="warning">No clients yet.</span><br><%= link_to "Add client", new_client_url %>
		<% end %>
		</ul>
	</div>
</div>