<%= form_for(@work_session, html: {class: 'form-horizontal'}) do |f| %>
  <% if @work_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work_session.errors.count, "error") %> prohibited this work_session from being saved:</h2>

      <ul>
      <% @work_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :activity %><br>
    <%= f.text_field :activity %>
  </div>
  <div class="form-group">
    <%= f.label :start %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="form-group">
    <%= f.label :end %><br>
    <%= f.datetime_select :end %>
  </div>
  <div class="form-group">
    <%= f.label :project %><br>
    <%= f.collection_select :project_id, User.find_by(:id => session[:user_id]).all_projects_of_user, :id, :name, {:prompt => true}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
