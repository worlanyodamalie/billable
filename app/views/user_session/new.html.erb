<h1>Login</h1>

<% if flash[:alert] %>
	<div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_tag({},{class: 'form-horizontal'}) do %>
	<div class="form-group">
		<%= label_tag :username, 'Username:', class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= text_field_tag :username, params[:username] %>
		</div>
	</div>

	<div class="form-group">
		<%= label_tag :password, 'Password:', class: 'col-sm-2 control-label' %>
		<div class="col-sm-10">
			<%= text_field_tag :password, params[:password] %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= submit_tag "Login", class: 'btn btn-success' %>
		</div>
	</div>
<% end %>